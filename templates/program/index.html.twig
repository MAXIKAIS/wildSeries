{% extends 'base.html.twig' %}

{% block title %}Liste des series{% endblock %}

{% block body %}
    <h1>Liste des series</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td>{{ program.poster }}</td>
                <td>
                    <a href="{{ path('program_show', {'id': program.id}) }}" class="btn btn-dark m-3">Voir</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}" class="btn btn-dark m-3">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}" class="btn btn-dark m-3">Creer une nouvelle s√©rie</a>
{% endblock %}
