{% extends "base.html.twig" %}

{% block title %}Episode {{ episode.title }} - {{ episode.season.program.title }}{% endblock %}
{% block body %}
    <section class="card text-mainColorText m-3">
        <div class="card-header bg-dark">
            <h1>Episode : {{ episode.title }}</h1>
        </div>
        <div class="media text-dark p-3">
            <div>
                <p>Programme : {{ episode.season.program.title }}</p>
                <p>Année : {{ episode.season.year }}</p>
                <p>Numéro : {{ episode.number }}</p>
                <p>Synopsis : {{ episode.synopsis }}</p>
            </div>
        </div>
    </section>
    <a class="btn btn-dark" href="{{ path('wild_season', {'seasonId' : episode.season.id}) }}">
        Retour
    </a>

{% endblock %}