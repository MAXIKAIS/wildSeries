{% extends 'base.html.twig' %}


{% block body %}
    <section>
        {% for episode in seasons.episodes %}
            <div class="card text-dark m-3 p-3">
                <h5 class="card-header bg-dark text-white">Episode n° {{ episode.number }}</h5>
                <div class="card-body">
                    <h5 class="card-title">{{episode.title}}</h5>
                    <p class="card-text">{{episode.synopsis}}</p>
                    <a class="btn btn-secondary" href="{{ path('wild_episode', { 'id' : episode.id } ) }}">Voir</a>
                </div>
            </div>
        {% endfor %}
    </section>
    <a class="btn btn-dark m-3" href="{{ path('wild_program_slug', {'slug' : seasons.program.title}) }}">
        Retour à la série {{ seasons.program.title }}
    </a>
    <a class="btn btn-dark m-3" href="../../../episode/new">Ajouter un épisode</a>
{% endblock %}